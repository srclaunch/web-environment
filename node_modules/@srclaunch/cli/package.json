{
  "name": "@srclaunch/cli",
  "description": "Command line tools used by AppLab applications and services",
  "author": "Steven Bennett <steven@srclaunch.com>",
  "license": "ISC",
  "version": "0.1.18",
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "bin": {
    "applab": "dist/index.es.js"
  },
  "type": "module",
  "main": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "package.json",
    "dist"
  ],
  "module": "./dist/index.es.js",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "scripts": {
    "build:cjs": "esbuild --external:'meow' --external:'fs-extra' --external:'esbuild-css-modules-plugin' --external:'typescript' --external:'esbuild' --external:'update-notifier' --sourcemap --bundle --outfile=dist/index.cjs.js --format=cjs --target=es2020 --platform=node src/index.ts",
    "build:es": "esbuild --external:'meow' --external:'fs-extra' --external:'esbuild-css-modules-plugin' --external:'typescript' --external:'esbuild' --external:'update-notifier' --sourcemap --bundle --outfile=dist/index.es.js --format=esm --target=es2020 --platform=node src/index.ts",
    "build:types": "tsc --build --force",
    "build": "yarn clean && yarn build:cjs && yarn build:es && yarn build:types",
    "clean": "rm -fr ./dist && mkdir dist",
    "copy-package-json": "cp ./src/stubs/cli-executable-package.json ./dist/package.json",
    "dev-cra": "yarn craco start --use-pnp",
    "dev": "NODE_ENV=dev && node --loader ts-node/esm --experimental-specifier-resolution=node ./src/index.ts",
    "start": "node dist/index.js",
    "push": "git push --follow-tags origin main",
    "release-patch": "yarn version patch && standard-version && yarn push",
    "release-minor": "yarn version minor && standard-version && yarn push",
    "release-major": "yarn version major && standard-version && yarn push",
    "release-prerelease": "yarn version prerelease && standard-version --prerelease && yarn push",
    "test": "ava"
  },
  "dependencies": {
    "add": "^2.0.6",
    "chalk": "^5.0.0",
    "change-case": "^4.1.2",
    "css-tree": "^2.0.4",
    "esbuild": "^0.14.19",
    "fs-extra": "^10.0.0",
    "ink": "^3.2.0",
    "ink-spinner": "^4.0.3",
    "luxon": "^2.3.0",
    "meow": "^10.1.2",
    "nanoid": "^3.2.0",
    "pluralize": "^8.0.0",
    "react": "^17.0.2",
    "shelljs": "^0.8.5",
    "terminal-link": "^3.0.0",
    "typescript": "^4.5.5",
    "update-notifier": "^5.1.0"
  },
  "devDependencies": {
    "@srclaunch/dx": "^0.1.2",
    "@srclaunch/types": "^0.1.2",
    "@types/fs-extra": "^9.0.13",
    "@types/luxon": "^2.0.9",
    "@types/node": "17.0.15",
    "@types/node-emoji": "^1.8.1",
    "@types/pluralize": "^0.0.29",
    "@types/react": "^17.0.39",
    "@types/rimraf": "^3.0.2",
    "@types/update-notifier": "^5.1.0",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "ava": "^4.0.1",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^7.0.0",
    "eslint-config-stylelint": "^15.0.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-better-styled-components": "^1.1.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^4.2.0",
    "eslint-plugin-github": "^4.3.5",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^25.7.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-only-warn": "^1.0.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-regexp": "^1.5.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-sort-requires": "^2.1.0",
    "eslint-plugin-testing-library": "^5.0.5",
    "eslint-plugin-unicorn": "^40.1.0",
    "prettier": "^2.5.1",
    "prettier-eslint": "^13.0.0",
    "standard-version": "^9.3.2",
    "stylelint": "^14.3.0",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended": "^6.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-order": "^5.0.0",
    "ts-node": "^10.4.0"
  },
  "resolve": {
    "alias": {
      "react/jsx-dev-runtime": "react/jsx-dev-runtime.js",
      "react/jsx-runtime": "react/jsx-runtime.js"
    }
  }
}
