{
  "name": "@srclaunch/dx",
  "description": "Linter config and other developer experience related configs",
  "author": "Steven Bennett <steven@srclaunch.com>",
  "license": "MIT",
  "version": "0.1.9",
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    ".commitlintrc.js",
    ".eslintrc.js",
    ".eslintrc.ui.js",
    ".prettierrc.js",
