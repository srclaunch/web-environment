{
  "name": "@srclaunch/dx",
  "description": "Linter config and other developer experience related configs",
  "author": "Steven Bennett <steven@srclaunch.com>",
  "license": "MIT",
  "version": "0.1.43",
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "version:patch": "yarn version patch && git add . && git commit -m \"Bump version for patch release\"",
    "git:push": "git push --follow-tags origin main",
    "qr": "git add . && git commit -m \"Quick release - patch\" && yarn release",
    "release": "yarn version:patch && yarn git:push",
    "yui": "yarn upgrade-interactive"
  },
  "files": [
    ".commitlintrc.mjs",
    ".commitlintrc.umd.js",
    ".eslintrc.mjs",
    ".eslintrc.umd.js",
    ".eslintrc.ui.mjs",
    ".eslintrc.ui.umd.js",
    ".prettierrc.mjs",
    ".prettierrc.umd.js",
    ".stylelintrc.mjs",
    ".stylelintrc.umd.js",
    ".stylelintrc.ui.mjs",
    ".stylelintrc.ui.umd.js",
    ".versionrc.mjs",
    ".versionrc.umd.js",
    "ava.config.mjs",
    "ava.config.umd.js",
    "jest.config.mjs",
    "jest.config.umd.js",
    "tsconfig.json",
    "tsconfig.ui.json"
  ],
  "exports": {
    "./.commitlintrc": {
      "import": "./.commitlintrc.mjs",
      "require": "./.commitlintrc.umd.js"
    },
    "./.eslintrc": {
      "import": "./.eslintrc.mjs",
      "require": "./.eslintrc.umd.js"
    },
    "./.eslintrc.ui": {
      "import": "./.eslintrc.ui.mjs",
      "require": "./.eslintrc.ui.umd.js"
    },
    "./.prettierrc": {
      "import": "./.prettierrc.mjs",
      "require": "./.prettierrc.umd.js"
    },
    "./.stylelintrc": {
      "import": "./.stylelintrc.mjs",
      "require": "./.stylelintrc.umd.js"
    },
    "./.stylelintrc.ui": {
      "import": "./.stylelintrc.ui.mjs",
      "require": "./.stylelintrc.ui.umd.js"
    },
    "./.versionrc": {
      "import": "./.versionrc.mjs",
      "require": "./.versionrc.umd.js"
    },
    "./ava.config": {
      "import": "./ava.config.mjs",
      "require": "./ava.config.umd.js"
    },
    "./jest.config": {
      "import": "./jest.config.mjs",
      "require": "./jest.config.umd.js"
    },
    "./tsconfig.json": {
      "import": "./tsconfig.json",
      "require": "./tsconfig.json"
    },
    "./tsconfig.ui.json": {
      "import": "./tsconfig.ui.json",
      "require": "./tsconfig.ui.json"
    }
  },
  "packageManager": "yarn@3.2.0"
}